<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TolyID.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TolyID.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TolyID">

    <TabBar Shell.TabBarUnselectedColor="White">

        <ShellContent
            Title="Cadastro"
            Icon="icone_tela_cadastro.png"
            ContentTemplate="{DataTemplate views:Cadastro}"/>

        <ShellContent
            Title="Capturas"
            Icon="icone_tela_capturas.png"
            ContentTemplate="{DataTemplate views:Capturas}"/>   

    </TabBar>

</Shell>
