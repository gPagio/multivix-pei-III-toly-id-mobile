<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TolyID.MVVM.Views.TatuView"
             Title="{Binding Tatu.IdentificacaoAnimal}"           
             Shell.BackgroundColor="{StaticResource Primary}"
             Shell.TitleColor="White"
             BackgroundColor="White">

    <ContentPage.Resources>
        <DataTemplate x:Key="CapturasTemplate">
            <Frame Margin="0, 5, 0, 5" Padding="10" BorderColor="{StaticResource Primary}" InputTransparent="True">
                <StackLayout>
                    <Label Text="{Binding Id, StringFormat='Captura NÂ° {0}'}" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                    <Label Text="{Binding DadosGerais.DataDeCaptura, StringFormat='{0:dd/MM/yyyy}'}" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                    <Label Text="{Binding DadosGerais.HorarioDeCaptura, StringFormat='{0:hh\\:mm}'}" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                </StackLayout>
            </Frame>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid Padding="20">

                  
        <ScrollView>
            <CollectionView ItemsSource="{Binding Capturas}" 
                            ItemTemplate="{StaticResource CapturasTemplate}"
                            SelectionMode="Single"
                            SelectionChanged="Capturas_SelectionChanged"/>
        </ScrollView>

        <Button HorizontalOptions="End" 
                VerticalOptions="End" 
                Text="Adicionar Captura"
                TextColor="White"
                BackgroundColor="{StaticResource Primary}"
                Clicked="AdicionarCaptura_Clicked"/>
    </Grid>

</ContentPage>