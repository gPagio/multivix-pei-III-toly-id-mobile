<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TolyID.MVVM.Views.Cadastro"
             Shell.BackgroundColor="{StaticResource Primary}"
             Shell.TitleColor="White"
             Title="Cadastro">

    <ContentPage.Resources>

        <Style x:Key="FrameTitulo" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
            <Setter Property="HeightRequest" Value="30"/>
            <Setter Property="WidthRequest" Value="150"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="LabelTitulo" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <Style x:Key="FrameEntradaDeDados" TargetType="Frame">
            <Setter Property="BorderColor" Value="{StaticResource Primary}"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
            <Setter Property="HeightRequest" Value="40"/>
        </Style>

    </ContentPage.Resources>
      
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            
            <!-- FOTOS -->
            <Frame HeightRequest="180"
                   BorderColor="{StaticResource Primary}">

                <Label Text="Toque para adicionar fotos"
                       FontSize="18"
                       TextColor="{StaticResource Primary}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <!-- DADOS GERAIS -->
            <Frame HeightRequest="790"
                   BorderColor="{StaticResource Primary}">

                <StackLayout Spacing="10">

                    <!-- TÍTULO -->
                    <Frame Style="{StaticResource FrameTitulo}">
                        <Label Text="Dados gerais"
                               Style="{StaticResource LabelTitulo}"/>
                    </Frame>

                    <!-- ID ANIMAL -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="ID ANIMAL"/>
                    </Frame>

                    <!-- Nº IDENTIFICAÇÃO -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="Nº IDENTIFICAÇÃO"
                               Keyboard="Numeric"/>
                    </Frame>

                    <!-- LOCAL DE CAPTURA -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="LOCAL DE CAPTURA"/>
                    </Frame>

                    <!-- EQUIPE RESPONSÁVEL -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="EQUIPE RESPONSÁVEL"/>
                    </Frame>

                    <!-- INSTITUIÇÃO -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="INSTITUIÇÃO"/>
                    </Frame>

                    <!-- PESO -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="PESO (G)"
                               Keyboard="Numeric"/>
                    </Frame>

                    <!-- Nº MICROCHIP -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="Nº MICROCHIP"
                               Keyboard="Numeric"/>
                    </Frame>

                    <!-- DATA CAPTURA -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="DATA CAPTURA"/>
                    </Frame>

                    <!-- HORÁRIO CAPTURA-->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="HORÁRIO CAPTURA"/>
                    </Frame>

                    <!-- CONTATO RESPONSÁVEL -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}">
                        <Entry Placeholder="CONTATO DO RESPONSÁVEL"/>
                    </Frame>

                    <!-- OBSERVAÇÕES -->
                    <Frame Style="{StaticResource FrameEntradaDeDados}"
                           HeightRequest="200">
                        <Entry Placeholder="OBSERVAÇÕES"/>
                    </Frame>


                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>