<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TolyID.MVVM.Views.Capturas"
             Shell.BackgroundColor="{StaticResource Primary}"
             Shell.TitleColor="White"
             Title="Capturas">

    <ContentPage.Resources>

        <DataTemplate x:Key="TatusCapturadosTemplate">

            <StackLayout HeightRequest="50">
                <Label Text="{Binding Id}"/>
                <Label Text="{Binding DadosGerais.DataDeCaptura}"/>
            </StackLayout>
            
            
        </DataTemplate>

    </ContentPage.Resources>
    
    
    
    <StackLayout>

        <CollectionView ItemsSource="{Binding Tatus}" ItemTemplate="{StaticResource TatusCapturadosTemplate}"/>
        <Button Text="Atualizar"
                WidthRequest="200"
                Command="{Binding CarregaTatusCommand}"/>
        
    </StackLayout>
    
    
    
    
</ContentPage>